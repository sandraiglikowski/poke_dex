<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_wellcome_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17.5dp"
        android:layout_marginEnd="17.5dp"
        android:layout_marginBottom="213dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/wellcome_titulo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_wellcome_subtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="155dp"
        android:text="@string/wellcome_subtitulo"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="0.5dp/@+id/textview_titulo"
        app:layout_constraintStart_toStartOf="0.5dp/@+id/textview_wellcome_titulo"
        app:layout_constraintTop_toBottomOf="16dp/@+id/textview_wellcome_titulo"
        app:layout_constraintBottom_toTopOf="57dp/@+id/btn_wellcome_continuar"
        app:layout_constraintTop_toTopOf="94dp/@+id/textview_wellcome_titulo"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_wellcome_continuar"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:text="Continuar"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:backgroundTint="@color/azul"
        />

</androidx.constraintlayout.widget.ConstraintLayout>